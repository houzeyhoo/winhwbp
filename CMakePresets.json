{
    "version": 8,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "base-x64",
            "hidden": true,
            "inherits": "base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "base-x86",
            "hidden": true,
            "inherits": "base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x86",
                "strategy": "external"
            }
        },
        {
            "name": "debug-x64",
            "displayName": "Debug x64",
            "inherits": "base-x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "WINHWBP_BUILD_TESTS": "ON",
                "WINHWBP_BUILD_EXAMPLE": "ON"
            }
        },
        {
            "name": "release-x64",
            "displayName": "Release x64",
            "inherits": "base-x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug-x86",
            "displayName": "Debug x86",
            "inherits": "base-x86",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "WINHWBP_BUILD_TESTS": "ON",
                "WINHWBP_BUILD_EXAMPLE": "ON"
            }
        },
        {
            "name": "release-x86",
            "displayName": "Release x86",
            "inherits": "base-x86",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-x64",
            "displayName": "Build Debug x64",
            "configurePreset": "debug-x64"
        },
        {
            "name": "release-x64",
            "displayName": "Build Release x64",
            "configurePreset": "release-x64"
        },
        {
            "name": "debug-x86",
            "displayName": "Build Debug x86",
            "configurePreset": "debug-x86"
        },
        {
            "name": "release-x86",
            "displayName": "Build Release x86",
            "configurePreset": "release-x86"
        }
    ]
}